{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",    
                "-D",
                "LIBRARY_CODE",  
                "-D",
                "ASMJIT_STATIC",       
                "/MD",
                "-I",
                "${workspaceFolder}/dep/asmjit/src",  
                "-I",
                "${workspaceFolder}/dep",                
                "/Fe:",
                "${fileDirname}\\hook_any_x64.dll",
                "${workspaceFolder}\\*.cpp",
                "${workspaceFolder}\\dep\\asmjit\\src\\asmjit\\core\\*.cpp",
                "${workspaceFolder}\\dep\\asmjit\\src\\asmjit\\x86\\*.cpp",
                "/link",                
                "/DLL",
                "/LIBPATH:${workspaceFolder}\\link-lib",
                "capstone_dll.lib",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}